<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round3_button"
    tools:context=".fragLogin">

    <LinearLayout
        android:id="@+id/loginframe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="125dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="LOGIN"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="52.7dp"
            android:text="Email"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/white_cursor_color"
            android:textSize="15sp" />

        <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="left"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="37.3dp"
            android:text="Password"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/etPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:passwordToggleEnabled="true">

                <android.widget.EditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="left"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3" />

        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="17.3dp"
            android:clickable="true"
            android:text="Forgot Password?"
            android:textSize="12.3sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need an account?"
                android:textColor="#fefefe"
                android:textSize="13dp" />


            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round3_button"
                android:text="Sign up"
                android:textSize="15sp"
                android:textColor="@color/black"

                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="40.7dp"
        android:layout_height="45.3dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="27.3dp"
        android:layout_marginBottom="43.7dp"
        android:background="@drawable/white_hexagone">

        <ImageView
            android:id="@+id/toogle"
            android:layout_width="16dp"
            android:layout_height="15.3dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/right_arrow" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</FrameLayout>