<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round3_button"
    android:elevation="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:id="@+id/tableRow_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#4DBDC3C7"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/creator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="secondaryText"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/degree"
                            android:text="NA"
                            android:typeface="serif" />


                    </TableRow>

                </TableLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linDegree"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="put the degree"
                    android:textAppearance="?attr/textAppearanceBody2" />

                <EditText
                    android:id="@+id/degreeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:inputType="numberDecimal" />

                <Button
                    android:layout_gravity="right"
                    android:id="@+id/saveDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save"
                    android:background="@drawable/round3_button"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>